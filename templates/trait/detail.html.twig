{% extends 'base.html.twig' %}

{% block title %}Encyclopedia : Demons{% endblock %}

{% block body %}
    <div class="menuTable">

        <div class="menu">
            <ul>
                <li><a href=" {{path('demonsList')}}">Gods</a></li>
                <li><a href=" {{path('itemsList')}}">Items</a></li>
                <li><a href=" {{path('skillsList')}}">Skills</a></li>
                <li><a href=" {{path('traitsList')}}">Traits</a></li>
            </ul>
        </div>
        <div class="centerWrap">
        <div class="divDemon">
                <h1 class="centerTitle">{{demonTrait.name}}</h1>
                <p>This trait will modify your Demon stats by percentages below</p>
                <div class="stat4">
                    <div class="stat-name">Strength</div>
                    <div class="stat-number">{{demonTrait.strength}}</div>       
                    <div class="stat-bar-neg">
                        {% if demonTrait.strength <= 0 %}
                            <div class="stat-value-neg" style="width: {{ demonTrait.strength|abs }}%;"></div>
                        {% else %}
                            <div class="stat-value" style="width: 0%;"></div>
                        {% endif %}
                    </div>  
                    <div class="stat-bar">
                        {% if demonTrait.strength >= 0 %}
                            <div class="stat-value" style="width: {{ demonTrait.strength|abs }}%;"></div>
                        {% else %}
                            <div class="stat-value" style="width: 0%;"></div>
                        {% endif %}
                    </div>

                    <div class="stat-name">Endurance</div>
                    <div class="stat-number">{{demonTrait.endurance}}</div>
