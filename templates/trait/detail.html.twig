                        {% endif %}
                    </div>

                    <div class="stat-name">Agility</div>
                    <div class="stat-number">{{demonTrait.agility}}</div>
                    <div class="stat-bar-neg">
                        {% if demonTrait.agility <= 0 %}
                            <div class="stat-value-neg" style="width: {{ demonTrait.agility|abs }}%;"></div>
                        {% else %}
                            <div class="stat-value" style="width: 0%;"></div>
                        {% endif %}
                    </div>  
                    <div class="stat-bar">
                        {% if demonTrait.agility >= 0 %}
