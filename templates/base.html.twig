<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Tomorrow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/looksLikeAButton.css') }}">
            <link rel="stylesheet" href="{{ asset('css/home.css') }}">
            <link rel="stylesheet" href="{{ asset('css/encyclopedia.css') }}">
            <link rel="stylesheet" href="{{ asset('css/community.css') }}">
            <link rel="stylesheet" href="{{ asset('css/base.css') }}">
            <link rel="stylesheet" href="{{ asset('css/account.css') }}">
            <link rel="stylesheet" href="{{ asset('css/form.css') }}">

        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <input type="checkbox" id="menuShowHide">
        <label for="menuShowHide"></label>
        <nav class="navbar" id="mainMenu">
            <ul>
                <li><a class="iconText" href=" {{path("app_home")}}" ><img class="navSvg" src="{{ asset('img/Home.svg') }}"> Home</a></li>
                <li><a class="iconText" href=" {{path("demonsList")}}" ><img class="navSvg" src="{{ asset('img/Book.svg') }}"> Encyclopedia</a></li>
                <li><a class="iconText" href=" {{path("app_home")}}" ><img class="navSvg" src="{{ asset('img/Chem.svg') }}"> The Lab</a></li>
                <li><a class="iconText" href=" {{path("community")}}" ><img class="navSvg" src="{{ asset('img/Community.svg') }}"> Community</a></li>
                {% if not app.user %}
                    <a class="iconText" href=" {{path("app_login")}} ">Login</a></li>
                    <a class="iconText" href=" {{path("app_register") }}">Register</a></li>
                {% endif %}
                {% if app.user and app.user.isverified %}
                    <li><a href=" {{path("app_logout") }}">Logout</a></li>
                {% endif %}
                <li><a class="iconText" href=" {{path("account")}}" ><img class="navSvg" src="{{ asset('img/profile.svg') }}"> Account</a></li>
            </ul>
        </nav>

        <div id="container">
            {% block body %}

            {% endblock %}
            {% block footer %}
                <footer class="footer"> Contact </footer>
            {% endblock %}
        </div>
    </body>
</html>
