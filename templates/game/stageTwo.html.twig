{% extends 'game.html.twig' %}

{% set var = demon.getDemonBase.name %}

{% block title %}The Beginning{% endblock %}

{% block body %}
    <div class="TextDiv gameGlobalDiv toHide">
        {% for message in app.flashes('notice') %}
            <p>{{ message }}</p>
        {% endfor %}
        {% for message in app.flashes('noticeLevel') %}
            <p>{{ message }}</p>
        {% endfor %}
    </div>

    <div class="TextDiv gameGlobalDiv" id='data' data-var="{{ var }}">
        
    </div>

    <div class="centerTextBox">
        <div class="speakerBox">
            
        </div>
        <div class="textBox">
            <div class="textContent">

            </div>
        </div>
    </div>


    <div class="bottomLeft">
        <p id="mute">Mute/unmute</p>
        <input type="range" id="volume" name="volume" min="0" value="25" max="100" step="1"/>
        <label for="volume">Volume</label>
    </div>

{% endblock %}

{% block js %}
    <script src="{{ asset("js/stageTwo.js")}}"></script>
{% endblock %}