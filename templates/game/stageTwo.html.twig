{% extends 'game.html.twig' %}

{% block title %}The Beginning{% endblock %}

{% block body %}
    <div class="TextDiv gameGlobalDiv">
        {% for message in app.flashes('notice') %}
            <p>{{ message }}</p>
        {% endfor %}
        {% for message in app.flashes('noticeLevel') %}
            <p>{{ message }}</p>
        {% endfor %}
    </div>

    <div class="centerTextBox hidden">
        <div class="speakerBox hidden">
            
        </div>
        <div class="textBox hidden">
            <div class="textContent hidden">

            </div>
        </div>
    </div>


    <div class="bottomLeft">
        <p id="mute">Mute/unmute</p>
        <input type="range" id="volume" name="volume" min="0" value="25" max="100" step="1"/>
        <label for="volume">Volume</label>
    </div>


{% endblock %}

