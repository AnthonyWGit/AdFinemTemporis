{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="formGlobal">
    <h1 class="centerTitle">Reset your password</h1>

    {{ form_start(resetForm) }}
        {{ form_row(resetForm.plainPassword) }}
        <small class="orange smallText"><i>{{ form_help(resetForm.plainPassword)}}</i></small>
        <button class="btn-11 custom-btn custom-btn2">Reset password</button>
    {{ form_end(resetForm) }}
</div>
{% endblock %}
