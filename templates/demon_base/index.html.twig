{% extends 'base.html.twig' %}

{% block title %}Encyclopedia : Demons{% endblock %}

{% block body %}
    <div class="menuTable">


        <div class="menu">
            <ul>
                <li><a href=" {{path('demonsList')}}">Gods</a></li>
                <li><a href=" {{path('itemsList')}}">Items</a></li>
                <li><a href=" {{path('skillsList')}}">Skills</a></li>
                <li><a href=" {{path('traitsList')}}">Traits</a></li>
            </ul>
        </div>

        <div class="divTable">
            {% if is_granted('ROLE_ADMIN') %}
            <div class="pex"><a class="looksLikeAButtonBlack" href="{{path('newDemonBase')}}">Add a new one</a></div>
        {% endif %}
        <table>
            <thead>
                <tr>
                    <th><b>ID</b></th>
                    <th><b>Name</b></th>
                    <th><b>Pantheon</b></th>
                    {% if is_granted('ROLE_ADMIN') %}
                        <th><b>Actions</b></th>
                    {% endif %}
                </tr>
            </thead>
            <tbody>
                {% for demon in demons %}
                <tr>
                    <td>{{demon.id}}</td>
                    <td><a class="linkNoBase" href="{{ path('demonDetail', {'name' : demon.name}) }}">{{demon.name}}</a></td>
                    <td>{{demon.pantheon}}</td>
                    {% if is_granted('ROLE_ADMIN') %}
                    <td><i>X<a href=" {{path('newDemonBase', {'name' : demon.name})}}">Edit</a></i></td>
                {% endif %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
{% endblock %}
