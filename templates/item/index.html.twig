{% extends 'base.html.twig' %}

{% block title %}Encyclopedia : Demons{% endblock %}

{% block body %}
    <div class="menuTable">


        <div class="menu">
            <ul>
                <li><a href=" {{path('demonsList')}}">Gods</a></li>
                <li><a href=" {{path('itemsList')}}">Items</a></li>
                <li><a href=" {{path('skillsList')}}">Skills</a></li>
                <li><a href=" {{path('traitsList')}}">Traits</a></li>
            </ul>
        </div>
        <div class="divTable">
            {% if is_granted('ROLE_ADMIN') %}
                <div class="pex"><a class="looksLikeAButtonBlack" href="{{path('newDemonBase')}}">Add a new one</a></div>
            {% endif %}
        <table>
            <thead>
                <tr>
                    <th><b>ID</b></th>
                    <th><b>Item name</b></th>
                    <th><b>Item cost</b></th>
                    <th><b>Item category</b></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                <tr>
                    <td>{{item.id}}</td>
                    <td>{{item.name}}</td>
                    <td>{{item.cost}}</td>
                    <td>{{item.category.name}}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
{% endblock %}
